---
export const prerender = false;
import { GET } from "../pages/stats.js";
import ServerEntry from "./server_entry.astro";
let response = await GET(Astro);
const data = await response.json();
---
{data.servers.map((server) => (
    <ServerEntry server={server}/>
))}

<style>
    div[data-tippy-root]{
        font-size: 200px;
        background-color: #0F000E !important;
        border: 1px solid #23005A !important;
        color: #EFEFEF !important;
    }
</style>

<script>
    import tippy from 'tippy.js';
    tippy('[data-tippy-content]', {
        duration: 0,
        arrow: false,
        theme: "light",
        hideOnClick: false,
        placement: "top-end",
    });
</script>